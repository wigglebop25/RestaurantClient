<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/glass_card_border"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/role_card_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <!-- Role Icon -->
        <ImageView
            android:id="@+id/role_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_role"
            app:tint="@color/admin_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Role Name -->
        <TextView
            android:id="@+id/role_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/role_badge"
            app:layout_constraintStart_toEndOf="@id/role_icon"
            app:layout_constraintTop_toTopOf="@id/role_icon"
            tools:text="MODERATOR" />

        <!-- Role Description -->
        <TextView
            android:id="@+id/role_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/admin_text_secondary"
            app:layout_constraintEnd_toEndOf="@id/role_name_text"
            app:layout_constraintStart_toStartOf="@id/role_name_text"
            app:layout_constraintTop_toBottomOf="@id/role_name_text"
            tools:text="Can moderate content" />

        <!-- Role Badge -->
        <TextView
            android:id="@+id/role_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/role_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/role_icon"
            tools:text="MODERATOR" />
            
        <!-- Permissions Badge -->
        <TextView
            android:id="@+id/permissions_badge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/permissions_badge_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/admin_accent"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/role_name_text"
            app:layout_constraintTop_toBottomOf="@id/role_description_text"
            tools:text="5 permissions: READ, WRITE, DELETE" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/permissions_badge">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manage_permissions_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Permissions"
                android:textColor="@color/admin_accent"
                app:icon="@drawable/ic_permissions"
                app:iconTint="@color/admin_accent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                android:textColor="@color/admin_primary"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/admin_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/admin_error"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/admin_error" />

        </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
