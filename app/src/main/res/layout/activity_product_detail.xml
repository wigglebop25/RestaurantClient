<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/itadaki_cream"
    tools:context=".ui.product.ProductDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Blur Target for Product Image -->
            <FrameLayout
                android:id="@+id/product_blur_target"
                android:layout_width="0dp"
                android:layout_height="443dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Product Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/food_light_gray"
                    tools:src="@drawable/tonkotsu_ramen" />
            </FrameLayout>

            <!-- Glass Info Card Overlay on Image -->
            <FrameLayout
                android:id="@+id/product_info_glass_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.eightbitlab.com.blurview.BlurView
                    android:id="@+id/product_info_glass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:blurOverlayColor="#15FFFFFF" />

                <!-- Glass Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/glass_card_border_not_rounded_corners" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Product Title -->
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/food_dark_text"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="@string/tonkotsu_ramen" />

                    <!-- Rating and Time -->
                    <LinearLayout
                        android:id="@+id/rating_time_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="@string/rating_content_description"
                            app:tint="@color/food_star_orange" />

                        <TextView
                            android:id="@+id/rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/food_dark_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:text="4.5" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="@color/food_text_secondary" />

                        <TextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/food_text_secondary"
                            android:textSize="14sp"
                            tools:text="26 mins" />
                    </LinearLayout>

                    <!-- Price -->
                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/itadaki_deep_red"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="$19.99" />
                </LinearLayout>
            </FrameLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/food_text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_info_glass_container"
                tools:text="@string/rich_pork_bone_broth_chashu_pork_bamboo_shoots_and_a_soft_boiled_egg" />

            <!-- Portion Control Section -->
            <TextView
                android:id="@+id/portion_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/portion_label"
                android:textColor="@color/food_dark_text"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_description" />

            <LinearLayout
                android:id="@+id/quantity_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/portion_label">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/decrement_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_remove"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/itadaki_deep_red"
                    app:cornerRadius="24dp" />

                <TextView
                    android:id="@+id/quantity_text"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/food_dark_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/increment_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/itadaki_deep_red"
                    app:cornerRadius="24dp" />
            </LinearLayout>

            <!-- Add bottom padding -->
            <View
                android:id="@+id/bottom_spacer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/quantity_selector"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar (Add to Cart) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        android:text="@string/order_now_button"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/itadaki_deep_red"
        app:cornerRadius="16dp" />

    <!-- Glass FAB Container with Badge -->
    <FrameLayout
        android:id="@+id/fab_cart_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp">

        <!-- Separate container for Layered Blur and Icon -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/glass_fab_border"
            android:outlineProvider="background"
            android:clipToOutline="true"
            android:elevation="8dp">

            <!-- LAYER 1: The Blur Background -->
            <com.eightbitlab.com.blurview.BlurView
                android:id="@+id/fab_blur_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glass_fab_border"
                app:blurOverlayColor="#15FFFFFF" />

            <!-- LAYER 2: The Sharp Icon -->
            <ImageView
                android:id="@+id/fab_cart_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cart"
                android:contentDescription="@string/view_cart"
                app:tint="@color/itadaki_deep_red" />

            <!-- LAYER 3: Invisible clickable overlay -->
            <View
                android:id="@+id/fab_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />
        </FrameLayout>

        <!-- Cart Badge Counter -->
        <TextView
            android:id="@+id/cart_badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/badge_background"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:elevation="12dp"
            android:visibility="gone"
            tools:text="3"
            tools:visibility="visible" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
