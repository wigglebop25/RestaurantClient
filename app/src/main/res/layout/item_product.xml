<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Product Image Placeholder -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/food_light_gray"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/gyudon" />

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_favorite"
            android:padding="6dp"
            android:background="@drawable/bg_product_card"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:layout_constraintEnd_toEndOf="@id/product_image"
            android:layout_margin="8dp"
            android:contentDescription="@string/nav_favorites"
            app:tint="@color/food_primary_red" />

        <!-- Admin Manage Button -->
        <ImageButton
            android:id="@+id/admin_manage_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_product_card"
            android:contentDescription="@string/product_manage_content_description"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_manage"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/product_image"
            app:layout_constraintEnd_toEndOf="@id/product_image"
            android:layout_margin="8dp"
            app:tint="@color/admin_primary"
            tools:visibility="gone" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/food_dark_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Cheeseburger" />

        <!-- Product Description (subtitle) -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/food_text_secondary"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Wendy's Burger" />

        <!-- Rating Section -->
        <LinearLayout
            android:id="@+id/rating_section"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/product_description"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:contentDescription="@string/rating_content_description"
                app:tint="@color/food_star_orange" />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/food_dark_text"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="4.5" />
        </LinearLayout>

        <!-- Product Price (Chip) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/product_price"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:checkable="false"
            android:textColor="@color/food_primary_red"
            android:textStyle="bold"
            android:textSize="14sp"
            app:chipBackgroundColor="@color/chip_price_background"
            app:chipMinHeight="32dp"
            app:layout_constraintTop_toBottomOf="@id/product_description"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="$5.50" />

        <!-- Admin Badge Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/admin_badge_chip"
            style="@style/Widget.RestaurantClient.AdminBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/admin_badge_text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_section"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
