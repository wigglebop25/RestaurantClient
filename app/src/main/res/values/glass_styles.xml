<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Glass Card Styles -->
    <style name="GlassCard">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GlassCard.Elevated">
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="GlassCard.Large">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Glass Button Styles -->
    <style name="GlassButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="strokeColor">@color/glass_border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="GlassButton.Filled" parent="GlassButton">
        <item name="backgroundTint">@color/glass_overlay_light</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="GlassButton.Primary" parent="GlassButton.Filled">
        <item name="backgroundTint">@color/blur_tint_primary</item>
        <item name="android:textColor">@color/brand_primary</item>
    </style>

    <style name="GlassButton.Accent" parent="GlassButton.Filled">
        <item name="backgroundTint">@color/admin_accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlassButton.Success" parent="GlassButton.Filled">
        <item name="backgroundTint">@color/admin_success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlassButton.Error" parent="GlassButton.Filled">
        <item name="backgroundTint">@color/admin_error</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlassButton.Warning" parent="GlassButton.Filled">
        <item name="backgroundTint">@color/admin_warning</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlassButton.Info" parent="GlassButton.Filled">
        <item name="backgroundTint">@color/admin_info</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GlassButton.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/brand_primary</item>
        <item name="rippleColor">@color/glass_overlay_light</item>
    </style>

    <!-- Glass Dialog Theme -->
    <style name="GlassDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- Glass Chip Styles -->
    <style name="GlassChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/glass_overlay_light</item>
        <item name="chipStrokeColor">@color/glass_border_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Glass Text Input Layout -->
    <style name="GlassTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/glass_border_light</item>
    </style>

    <!-- Glass FAB Styles -->
    <style name="GlassFAB">
        <item name="backgroundTint">@color/glass_overlay_light</item>
        <item name="tint">@color/brand_primary</item>
        <item name="elevation">8dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="GlassFAB.Accent">
        <item name="backgroundTint">@color/blur_tint_accent</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="GlassFAB.Primary">
        <item name="backgroundTint">@color/blur_tint_primary</item>
        <item name="tint">@color/brand_primary</item>
    </style>

    <style name="GlassFAB.Large">
        <item name="fabSize">normal</item>
        <item name="elevation">12dp</item>
    </style>

    <!-- Glass Progress Bar -->
    <style name="GlassProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/brand_primary</item>
        <item name="trackColor">@color/glass_overlay_light</item>
    </style>

    <!-- Glass Switch -->
    <style name="GlassSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/brand_primary</item>
        <item name="trackTint">@color/glass_overlay_light</item>
    </style>

    <!-- Glass Divider -->
    <style name="GlassDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/glass_border_light</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Rounded Image View -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>
