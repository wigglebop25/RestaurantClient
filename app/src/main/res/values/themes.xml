<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RestaurantClient" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorPrimaryContainer">@color/brand_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/brand_on_primary_container</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/brand_on_secondary</item>
        <item name="colorSecondaryContainer">@color/brand_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/brand_on_secondary_container</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorOnSurface">@color/brand_on_surface</item>
        <item name="colorSurfaceVariant">@color/brand_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/brand_on_surface_variant</item>
        <item name="colorOutline">@color/brand_outline</item>
        <item name="colorOutlineVariant">@color/brand_outline_variant</item>
        <item name="android:statusBarColor">@color/brand_primary</item>
        <item name="android:navigationBarColor">@color/brand_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowBackground">@color/brand_background</item>
        
        <!-- Toolbar Style -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
    </style>

    <style name="Theme.RestaurantClient" parent="Base.Theme.RestaurantClient" />
    
    <!-- AppBarLayout Style -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Surface Container colors for Material 3 -->
    <color name="brand_surface_container">@color/brand_surface_variant</color>

    <!-- Food Delivery Chip Styles -->
    <style name="Widget.App.Chip.Category" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    
    <!-- Itadaki Introduction Screen Theme -->
    <style name="Theme.Itadaki.Introduction" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/itadaki_red</item>
        <item name="colorOnPrimary">@color/itadaki_white</item>
        <item name="colorPrimaryContainer">@color/itadaki_crimson</item>
        <item name="colorOnPrimaryContainer">@color/itadaki_white</item>
        <item name="colorSecondary">@color/itadaki_charcoal</item>
        <item name="colorOnSecondary">@color/itadaki_white</item>
        <item name="android:statusBarColor">@color/itadaki_crimson</item>
        <item name="android:navigationBarColor">@color/itadaki_charcoal</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/itadaki_charcoal</item>
    </style>
</resources>