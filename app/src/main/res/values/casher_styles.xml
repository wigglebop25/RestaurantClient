<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RestaurantClient.Cashier" parent="Theme.RestaurantClient">
        <item name="colorPrimary">@color/itadaki_crimson</item>
        <item name="colorSecondary">@color/admin_accent</item>
        <item name="android:statusBarColor">@color/itadaki_crimson</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Widget.RestaurantClient.CashierChoiceChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/casher_chip_background</item>
        <item name="android:textColor">@color/admin_chip_text</item> <!-- Reusing white/gray text selector is fine -->
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="rippleColor">@color/itadaki_crimson</item>
    </style>
</resources>